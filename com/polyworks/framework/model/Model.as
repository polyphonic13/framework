bject; 				/**		* @param modelName:String - unique identifier		* constructor		*/		public function Model( modelName:String ):void 		{			_name = modelName;			_testing = false;			_eventCenterSet = false;		}				/**		* @return _name:String - instance's unique identifier		*/		public function get name():String { return _name; } 				public function get testing():Boolean { return _testing; }				public function set testing( t:Boolean ):void { _testing = t; }				/**		* @return reference to EventCenter		*/		public function get eventCenter():* { return evtCenter; }				/**		* @param _eventCenter:EventCenter - stores reference		* to applicaton's event center instance	    */		public function set eventCenter( ec:* ):void 		{			evtCenter = ec; 			_eventCenterSet = true;		}				public function get player():* { return _player; }					public function set player( p:Object ):void { _player = p; }		//		NOT YET IMPLEMENTED		public function notifyOfEvent( evt:Event ):void		{			if( _eventCenterSet )			{				evtCenter.dispatchEvent( evt ); 			}			else			{				Logger.output( "ERROR: _eventCenter not set" ); 			}		}				public function addEventListener( evt:String, listener:Function ):void 		{			if( _eventCenterSet ) 			{				evtCenter.addEventListener( evt, listener ); 			}			else			{				Logger.output( "ERROR: _eventCenter not set" );			}		}				public function removeEventListener( evt:String, listener:Function ):void 		{			if( _eventCenterSet )			{				evtCenter.removeEventListener( evt, listener );			}			else			{				Logger.output( "ERROR: _eventCenter not set" ); 			}		}			}}